page {
    background: #fff;
    height: 100%;
}

.logo-wapper {
    padding: 115rpx 0 80rpx;
    height: 140rpx;
    text-align: center;
}

.logo-wapper .logo {
    display: inline-block;
    height: 140rpx;
    width: 140rpx;
    border-radius: 50%;
    border:1px solid #eaeaea;
}

.qrcode-wapper {
    text-align: center;
    margin-bottom: 42rpx;
    height: 200rpx;
}

.qrcode-wapper .qr {
    display: inline-block;
    height: 200rpx;
}

.num {
    font-size: 48rpx;
    color: #000000;
    text-align: center;
    margin-bottom: 58rpx;
}

.lit {
    color:#9e9e9e;
    font-size: 26rpx;
    text-align: center;
}

.logo-bottom{
    margin-top: 70rpx;
}