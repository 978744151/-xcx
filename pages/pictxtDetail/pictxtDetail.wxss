.content{
   padding: 0 30rpx 40rpx 30rpx;
}

.title{
   font-size: 40rpx;
   color: #000000;
   margin: 20rpx 0 38rpx;
}
.pic-news{
   display: flex;
   display: -webkit-flex;
   flex-direction: row;
   justify-content: space-between;
   font-size: 24rpx;
   color: #8e8e8e;
   margin-bottom: 38rpx;
}
.two-title{
   background: #f1f8fc;
   padding: 20rpx 20rpx;
   font-size: 28rpx;
   color: #3e3e3e;
   line-height: 45rpx;
}
.pic-images{
   margin-top: 38rpx;
   text-align: center;
}
.pic-images image{
   display: inline-block;
   width: 100%;
}
.pic-content { 
   margin-top: 38rpx;
}
.pic-content text{
   display: block;
   font-size: 28rpx;
   color: #3e3e3e;
   line-height: 45rpx;
}
.pic-video{
   height: 520rpx;
   margin: 38rpx 0 38rpx;
}
.pic-video video{
   width: 100%;
   height: 100%;
}

.pic-tel{
    margin-top: 40rpx;
    display: flex;
    position: relative;
    height: 76rpx;
    align-items: center;
    padding-left: 22rpx;
    font-size: 28rpx;
    color:#272727;
}

.pic-tel::after{
    position: absolute;
    content: '';
    top: 0;
    left: 0;
    height: 76rpx;
    width: 14rpx;
    background: #272727;
}

.pic-tel .icont-tel{
    width: 54rpx;
    height: 76rpx;
    background: url('https://pic.repaiapp.com/pic/f6/d5/b5/f6d5b564068f8f1d2a6e91843dc1b3348a160a47.png') center no-repeat;
    background-size: 29rpx 43rpx;
}