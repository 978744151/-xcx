   margin-top: 52px;
   padding-left: 30rpx;
   background: #fff;
}
.seh-item{
   height: 100rpx;
   line-height: 100rpx;
   font-size: 30rpx;
   color: #232323;
   border-bottom:1px solid #f0f0f0;
}
.seh-item:last-child{
