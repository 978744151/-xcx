/**index.wxss**/
page{
   background: #f6f6f6;
}
.dw {
    position: absolute;
    top: 0;
    right: 0;
    width: 100px;
    height: 100%;
}

.wxSortPickerViewTag {
    background-color: #f1f1f1;
    font-size: 16px;
    font-weight: bold;
    color: #999999;
    line-height: 30px;
    height: 30px;
    padding: 0 15px;
}

.wxSortPickerViewItem {
    height: 40px;
    line-height: 40px;
    border-bottom: 1px solid #eee;
    margin-left: 15px;
    color: #444;
}

.hor {
    font-size: 14px;
    color: #999999;
    font-weight: 500;
    display: block;
    padding: 14px 25px 5px 0px;
}

.kuai {
    height: 66rpx;
    width: 28%;
    text-align: center;
    line-height: 66rpx;
    display: inline-block;
    margin: 30rpx 30rpx 0 0;
    background: #f0f0f0;
    border-radius: 2px;
    font-size: 30rpx;
    color: #484848;
}

.searchLetter {
    position: fixed;
    right: 0;
    width: 20px;
    height: 50%;
    -webkit-transform: translate(0%, -50%);
    transform: translate(0%, -50%);
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #666;
    z-index: 1;
}

.searchLetter view {
    height: 70rpx;
    width: 100%;
    text-align: center;
}

.touchClass {
    top: 50%;
    right: 0;
    background-color: #fff;
    color: #575656;
    font-weight: 500;
    font-size: 21rpx;
}

.showSlectedLetter {
    position: fixed;
    color: #000;
    top: 50%;
    left: 50%;
    width: 100px;
    height: 100px;
    line-height: 100px;
    text-align: center;
    margin-top: -50px;
    margin-left: -50px;
    font-size: 112rpx;
    z-index: 1;
}

.selection {
    display: flex;
    width: 100%;
    flex-direction: column;
    background: #fff;
}

.selection .item_city:last-of-type::after {
    /*border:none!important;*/
    content: none;
}

.item_letter {
    display: flex;
    background-color: #f8f8f8;
    height: 70rpx;
    padding-left: 28rpx;
    align-items: center;
    font-size: 30rpx;
    color: #9e9e9e;
}

.item_city {
    position: relative;
    display: flex;
    background-color: #fff;
    height: 100rpx;
    padding: 0 28rpx;
    align-items: center;
    font-size: 30rpx;
    color: #232323;
}

.item_city::after {
    content: '';
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: 0 28rpx;
    left: 28rpx;
    border-bottom: 1px solid #f0f0f0;
}

.gps {
    position: relative;
    height: 38px;
    border-bottom: 1px solid #ccc;
    border-top: 1px solid #ccc;
    line-height: 38px;
    padding-left: 15px;
    font-size: 16px;
}

.gpsif {
    font-size: 14px;
    color: #ccc;
}

.now-city {
    height: 100rpx;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    padding: 0 28rpx;
    font-size: 30rpx;
    color: #232323;
}

.icont-map {
    display: inline-block;
    width: 30rpx;
    height: 32rpx;
    background: url('https://pic.repaiapp.com/pic/c9/33/21/c9332133d34ba94b20fde417b6fa8b1535c201d2.png') center no-repeat;
    background-size: cover;
    margin-right: 16rpx;
    vertical-align: middle;
}


.search-selection {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: #fff;
    border-bottom: 1px solid #f0f0f0;
    border-top: 1px solid #f0f0f0;
    z-index: 22;
}

.search-selection .input-search {
    background: #f6f6f6;
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: -o-flex;
    display: flex;
    align-items: center;
    justify-content: center;
} 

.search-selection .blank {
    padding: 18rpx 28rpx;
}

.search-selection .input-search input {
    height: 67rpx;
    line-height: 67rpx;
    font-size: 30rpx;
    transition: width .5s ease;
    width:230rpx;
    /*flex: 1;*/
}


.search-selection .input-search .icont-search {
    width: 29rpx;
    height: 28rpx;
    background: url(https://pic.repaiapp.com/pic/9c/d2/67/9cd26719378ddccf9e8adff7697aa1c50f0ed0bc.png) center no-repeat;
    background-size: cover;
    margin: 0 15rpx;
}

.search-selection .input-search input:focus {
    flex: 1;
}


.left-map {
    flex: 1;
    align-items: center;
}

.right-map {
    display: inline-flex;
    color: #20a0ff;
    font-size: 28rpx;
    padding: 0 30rpx;
    align-items: center;
}

.right-map .icont {
    display: inline-block;
    width: 28rpx;
    height: 28rpx;
}


.right-map .icont.map {
    background: url('https://pic.repaiapp.com/pic/fc/be/41/fcbe417d9ff8cfa26c4084547508bbba17b04aaa.png') center no-repeat;
    background-size: cover;
}

.right-map .icont.loading {
    width: 42rpx;
    height: 42rpx;
    background: url('https://pic.repaiapp.com/pic/5c/f5/88/5cf588d3c244efd967b21d3be68d6bb0811d5256.gif') center no-repeat;
    background-size: cover;
}

.right-map .text {
    display: inline-block;
    vertical-align: middle;
    margin-left: 10rpx;
}

.left-map .strong {
    font-weight: 500;
}
