    background-size: 100% 100%;
    vertical-align: middle;
}

.shops-city {
    display: inline-block;
    font-size: 30rpx;
    color: #3d3d3d;
    margin-left: 15rpx;
    background: url(https://pic.repaiapp.com/pic/b4/56/91/b45691260a6dc00628cc311e5c6dddf922605bc2.png) right center no-repeat;
    background-size: 21rpx 14rpx;
    padding-right: 30rpx;
    vertical-align: middle;
}

.shops-right {
    flex: 1;
    text-align: right;
    font-size: 26rpx;
    color: #969696;
    padding: 0 30rpx;
}

