.shops-tit {
  position: fixed;
    top:0;
    left: 0;
    width: 100%;
    display: flex;
    display: -webkit-flex;
    flex-direction: row;
    align-items: center;
    height: 90rpx;
    line-height: 90rpx;
    padding-right: 30rpx;
    border-top: 1px solid #dddddd;
    border-bottom: 1px solid #dddddd;
    background:#fff url(https://pic.repaiapp.com/pic/85/d3/4b/85d34b517af69fbab250ee7055eaf1a4fcd07506.png) no-repeat;
    background-size:100% 100%;
    z-index: 11;
}

.shops-tit .left-part {
    padding: 0 30rpx;
}

.shops-icon {
    display: inline-block;
    width: 29rpx;
    height: 32rpx;
