page {
    background: #f6f6f6;
    font-family: "微软雅黑";
    height: 100%;
    width: 100%;
}

.content {
    position: relative;
    padding-bottom: 100rpx;
}

.swiper,
.banner {
    width: 100%;
    height: 470rpx;
}

.banner .slide-image {
    width: 100%;
    height: 470rpx;
}

.goodsinfor {
    position: relative;
}

.jifen {
    position: absolute;
    right: 10px;
    color: #ff7b11;
    font-size: 14px;
}

.title {
    position: relative;
    display: flex;
    align-items: center;
    padding: 17rpx 20rpx 10rpx 20rpx;
    font-size: 0;
    background-color: #fff;
}

.t-tag {
  display:inline-block;
  width:56rpx;
  height:32rpx;
  color:#fff;
  margin-right:15rpx;
}

.titleCon {
    font-size: 32rpx;
    color: #101010;
    /* margin-left: 15rpx; */
    vertical-align: middle;
}

.exchang-money {
    background: #fff;
    padding: 0 20rpx;
    color: #f14949;
    font-size: 0;
    line-height: normal;
}

.exchang-money .strong {
    font-size: 37rpx;
    font-weight: 500;
}

.exchange-other {
    padding: 15rpx 20rpx;
    display: flex;
    align-items: center;
    color: #9e9e9e;
    font-size: 28rpx;
    background: #fff;
}

.exchange-other .rp-flex-item.left {
    text-decoration: line-through;
}

.exchange-other .rp-flex-item.right {
    text-align: right;
}

.exchange-other .rp-flex-item.center {
    text-align: center;
}

.validity {
    position: relative;
    padding: 20rpx;
    border-top: 1rpx #e8e8e8 solid;
    border-bottom: 1rpx #e8e8e8 solid;
    font-size: 28rpx;
    color: #9e9e9e;
    background-color: #fff;
}

.bordernone {
    border: none;
    padding-top: 0;
}

.address {
    position: relative;
    margin-top: 20rpx;
    border-top: 1rpx #e8e8e8 solid;
    background-color: #fff;
    padding: 20rpx;
    font-size: 28rpx;
    color: #9e9e9e;
}

.address view {
    width: 2px;
    height: 22rpx;
    display: inline-block;
    background-color: #9e9e9e;
}

.addressList {
    position: relative;
    padding: 20rpx;
    background-color: #f9f5f5;
    border-bottom: 1rpx #e8e8e8 solid;
    font-size: 28rpx;
    color: #9e9e9e;
}

.addressList text {
    color: #101010;
}

.addressList .iconfont {
    margin-left: 10rpx;
    font-size: 32rpx;
}

.padd-r10 {
    padding-right: 10rpx;
}

.activityRules {
    position: relative;
    background-color: #fff;
    padding: 20rpx;
    padding-left: 15.5px;
    font-size: 28rpx;
    color: #101010;
    border-top: 1rpx #e8e8e8 solid;
    border-bottom: 1rpx #e8e8e8 solid;
}

.activityRules view {
    margin-bottom: 10px;
}

.image-text {
    position: relative;
    background-color: #fff;
    height: 380rpx;
    width: 100%;
}

.image-text image {
    width: 100%;
    height: 100%;
}

.blank{
  height: 80rpx;
  width: 100%;
}

.goitgexchange{
    position: fixed;
    bottom: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #fffccb;
    color: #4a4a48;
    padding-left: 20rpx;
    font-size: 24rpx;
    width: 100%; 
    z-index: 999;
}


.footer {
    position: fixed;
    bottom: 0;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    /* background-color: #dd2f3b; */
    color: #fff;
    font-size: 32rpx;
    width: 100%;
    z-index: 999;
}

.addressCon {
    position: fixed;
    top: 0;
    height: 100%;
    width: 100%;
    background-color: #f6f6f6;
    border-top: 1rpx #e8e8e8 solid;
    transition: all 0.5s ease;
}




/*兑换成功*/

.success {
    position: relative;
    padding: 10px;
    background-color: #fff;
    font-size: 15px;
    color: #101010;
}

.success text {
    margin-left: 60rpx;
}

.success image {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 50%;
    margin-top: -20rpx;
}

.status {
    position: relative;
    padding: 10px;
    background-color: #fff;
    padding-top: 0;
}

.status image {
    height: 140rpx;
    width: 100%;
}

.successInfor {
    position: relative;
    background-color: #fff;
    padding: 10px;
    padding-top: 0;
    font-size: 14px;
    color: #9e9e9e;
}
