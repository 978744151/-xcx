page {
    background: #f0f0f0;
}

.paymentcode-panle {
    border-top: 1px solid #f0f0f0;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

.paymentcode-panle.blur {
    filter: blur(10px);
}

.card-panle {
    padding: 12rpx 30rpx;
    background: #fff;
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: -o-flex;
    display: flex;
    align-items: flex-start;
}

.card-panle .card-content {
    width: 174rpx;
    height: 105rpx;
    margin-right: 27rpx;
}

.card-panle .card-info {
    font-size: 28rpx;
    color: #000;
    flex: 1;
}

.card-panle .card-info .card-name {
    margin-top: 15rpx;
    height: 28rpx;
    line-height: 28rpx;
}

.card-panle .card-info .card-num {
    margin-top: 20rpx;
    height: 28rpx;
    line-height: 28rpx;
}

.process {
    position: relative;
    height: 12rpx;
    background: #d6d7dd;
}

.process .tip {
    position: absolute;
    top: 0;
    left: 0;
    background: #80818c;
    z-index: 2;
    height: 100%;
    transition: width .1s ease;
}

.code-panle {
    padding: 22rpx 28rpx;
    color: #261c1d;
}

.code-panle .content {
    background: #fff;
    padding: 58rpx 0 62rpx;
}


.code-panle .title {
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: -o-flex;
    display: flex;
    align-items: baseline;
    height: 42rpx;
    width: 100%;
    justify-content: center;
    margin-bottom: 48rpx;
}

.code-panle .title .f-s26 {
    font-size: 26rpx;
}

.code-panle .title .money {
    font-size: 48rpx;
    font-weight: 500;
}


.code-panle .title .link {
    font-size: 26rpx;
    color: #279694;
    margin-left: 5rpx;
}

.column-code {
    padding: 0 30rpx;
}

.column-code image {
    width: 100%;
    height: 172rpx;
}

.look-code {
    padding: 24rpx 0 65rpx;
    font-size: 30rpx;
    text-align: center;
    line-height:30rpx;
}

.qr-code {
    height: 416rpx;
    text-align: center;
}

.qr-code image {
    display: inline-block;
    width: 416rpx;
    height: 416rpx;
}

.dialog-code {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 22;
    background: #fff;
    text-align: center;
}

.dialog-code image {
    -webkit-transform: rotate(90deg) scale(1.25, 1.25);
    transform: rotate(90deg) scale(1.25, 1.25);
    height: 100%;
    transition: transform 1s;
}

.careful-panle {
    text-align: center;
    font-size: 26rpx;
    color: #261c1d;
}

.careful-panle text {
    display: inline-block;
    vertical-align: middle;
}

.careful-panle .iconfont {
    color: #261c1d;
    font-size: 28rpx;
    margin-right: 12rpx;
}
.moncode-hint{
   position: absolute;
   right: -200rpx;
   top: 50%;
   margin-top: -20rpx;
   font-size: 26rpx;
   color: #ff9600;
   background: url(https://pic.repaiapp.com/pic/33/13/58/331358145b1321eeec478116bc1067ceac7874cc.png) left center no-repeat;
   background-size: 26rpx 30rpx;
   padding-left: 30rpx;
   -webkit-transform: rotate(90deg);
    transform: rotate(90deg);
}