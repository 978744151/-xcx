}

.sweep {
    position: relative;
    height: 100%;
    overflow: hidden;
    background: #fff;
    border-top: 1px solid #f0f0f0;
    box-sizing: border-box;
}

.shoplogo {
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    align-items: center;
    margin-top: 18%;
}

.logo-wapper {
    display: -webkit-flex;
    display: flex;
    width: 750rpx;
    height: 596rpx;
    justify-content: center;
    background: url(https://pic.repaiapp.com/static/png/20171206/21/1512567736006410050.png);
    background-size: 100% 100%;
}

.logo-wapper .shoplogo-avatar {
    width: 138rpx;
    height: 138rpx;
    border-radius: 50%;
    margin-top: 120rpx;
    margin-left: -5rpx;
}

.shoplogo-nickname {
   display: block;
   width: 484rpx;
   height: 48rpx;
   background: url(https://pic.repaiapp.com/static/png/20171206/21/1512568093877415055.png)no-repeat;
   background-size: 100%;
   margin: 106rpx auto 0;
}

.shopinfo-text {
    font-size: 28rpx;
    color: #9b9b9b;
    margin-top: 40rpx;
}

.scaninfo {
   width:660rpx;height: 96rpx;margin: 0 auto;
   background: url(https://pic.repaiapp.com/static/png/20171206/21/1512568323647595552.png) no-repeat;background-size: 100%; 
