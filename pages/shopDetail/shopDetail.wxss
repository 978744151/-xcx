/* pages/shopDetail/shopDetail.wxss */
page{background: #fff;}
.top{text-align: center;padding: 29rpx 0 23rpx;border-bottom:10rpx solid #f0f0f0; }
.top .logo{margin: 0 auto;width: 162rpx;height: 162rpx;border: 1px solid #f0f0f0;overflow: hidden;background: url('https://pic.repaiapp.com/pic/43/b5/d2/43b5d2d12fcd5cf36d765aff0eb45f7007e64479.png?x-oss-process=image/resize,h_130,w_130')no-repeat;background-size: cover;}
.top .logo image{width: 100%;height: 100%;}
.top .name{font-size: 30rpx;line-height: 61rpx;padding-top:19rpx; }
.top .evaluate{line-height:56rpx;font-size: 26rpx;display: flex;justify-content: center;align-items: center; padding-bottom: 24rpx;border-bottom: 1rpx solid #f0f0f0;}
.top .evaluate .star{display: flex;flex-direction: row;}
.top .evaluate .star text{display: block;width:23rpx;height: 22rpx;background: url('https://pic.repaiapp.com/static/png/20171205/14/1512453677251398102.png')no-repeat;background-size: 23rpx 22rpx; margin-right: 3rpx;}
.top .list{padding: 20rpx;position: relative}
.top .list view{display: flex;flex-direction: row;width: 100%;}
.top .list view image{width:100%;height: 163rpx;}
 .top .hintIcon{position: absolute;width: 19rpx;height: 34rpx;background: url('https://pic.repaiapp.com/static/png/20171205/20/1512477461445710148.png')no-repeat;background-size: 19rpx 34rpx;right: 20rpx;top: 88rpx;} 
.top .tips{display: flex;flex-direction: row;padding: 0 20rpx;}
.top .tips text{display: block;width: 96rpx;height: 44rpx;line-height: 44rpx;text-align: center;border:2rpx solid #f14949;border-radius: 4rpx;font-size: 30rpx;margin-right:20rpx; color: #f14949;}
.bottom .item{display: flex;align-items: center; padding:20rpx;border-bottom: 1px solid #f0f0f0;font-size:30rpx;color: #999999;}
.bottom .item .look{color: #f14949;}
.bottom .item .name{width: 150rpx;display: flex;justify-content: space-between;padding-right: 20rpx;}
.bottom .item .desc{flex:1}


















